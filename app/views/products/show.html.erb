<div class="row" style="margin-top:20px;">
    <div class="col-md-6">
        <% if @product.image.present? %>
        <%= image_tag(@product.image.medium.url, class:"thumbnail no-border") %>
    <% else %>
        <%= image_tag("http://placehold.it/400x400&text= No Pic", class: "thumbnail") %>
        <% end %>
    </div>

    <div class="col-md-6">
        <h2>
            <%= @product.title %>
        </h2>
        <hr>
        <div style="height: 100px;">
            <p class="body-text-1">
                <%= @product.description %>
            </p>
        </div>
        <div class="product-price">
            单价：￥
            <%= @product.price %>
        </div>
        <div class="product-price" style="margin-top: 10px;">
            库存：<%= @product.quantity %>
        </div>
        <div class="pull-left" style="margin-top: 60px;">
            <% if @product.quantity.present? && @product.quantity > 0 %>
            <%= link_to("加入购物车",add_to_cart_product_path(@product), method: :post , class: "btn btn-lg btn-danger") %>
        <% else %>
            已销售一空，无法购买
            <% end %>
        </div>
    </div>
</div>
